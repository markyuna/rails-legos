<h1 class="text-center">Vos r√©servations</h1>
<div class="">
  <div class="container text-center">
    <div class="row grid">
      <% @bookings.each do |booking| %>
        <% product = Product.find(booking.product_id) %>
        <div class="col">
          <div class="card-category mb-2">
            <div class="card-body p-3 ">
              <% if product.photo.key.present? %>
                <%= cl_image_tag booking.product.photo.key, crop: :fill, class:"product_pic" %>
              <% else %>
                <%= image_tag("unknown.jpg", class:"product_pic") %>
              <% end %>
              <p class="card-title">City: <%= product.city %></p>
              <p class="card-subtitle text-muted"><span class="font-weight-bold">Total Price:</span> <%= booking.total_price %> Euros</p>
              <small class="card-text p-y-1"><span class="font-weight-bold">Description:</span> <%= product.description %> people</small><br>
            </div>
            <div class="d-flex justify-content-center link_list">
              <%= link_to 'Voir', booking, class: "p-2" %> <br>
              <%= link_to 'Edit', edit_booking_path(booking), class: "p-2" %>
              <%= link_to 'Annuler', booking_path(@booking), method: :delete, data: {confirm: "sure?"}, class: "p-2" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="row">
      <div class="container">
        <%= link_to "Back to All products!", products_path, class:"btn btn-primary" %>
        <%= link_to 'All your reviews', reviews_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
