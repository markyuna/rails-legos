<%= link_to product do %>
  <% if product.photo.key.nil? %>
    <%= image_tag "no-image.png", class:"img-fluid width: 100% height: auto" %>
  <% else %>
    <%= cl_image_tag product.photo.key, crop: :fill, class:"img-fluid width: 100% height: auto" %>
  <% end %>
  <div class="map-card">
    <p><span class="font-weight-bold" ><i class="fa fa-location-arrow"></i></span>  <%= product.address %> <strong><%= product.city %></strong></p>
    <p><span class="font-weight-bold" ><i class="fa fa-user"></i></span>  <%= product.capacity %> people</p>
    <p>â‚¬/day <span class="font-weight-bold"><%= product.price_per_day %></span></p>
  </div>
<% end %>
