<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
   <h1 class="display-1 pt-5">Ajouter un produits</h1>
  </div>
</div>
<div class="container">
  <div class="rental_form">
    <%= simple_form_for [ @product ] do |f| %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :address %>
      <%= f.input :city %>
      <%= f.input :capacity %>
      <%= f.input :price_per_day %>
      <%= f.input :photo, as: :file %>
      <%= f.submit "Modifier le produit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
